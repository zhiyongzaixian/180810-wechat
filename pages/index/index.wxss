/* pages/index/index.wxss */
page {
  background: #8ed145;
  height: 100%;
}
.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin: 100rpx 0;
}

.nickName {
  font-size: 38rpx;
  font-weight: bold;
  margin: 100rpx 0;
}

.goStudy {
  width: 280rpx;
  height: 80rpx;
  border: 1rpx solid #666;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
}

button{
  width: 300rpx;
  height: 300rpx;
  border-radius: 150rpx;
  margin: 50rpx 0;
  font-size: 28rpx;
  line-height: 300rpx;
  background: pink;
}